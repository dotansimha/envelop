{
  "compilerOptions": {
    "incremental": true,
    "baseUrl": ".",
    "outDir": "dist",
    "rootDir": "packages",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "experimentalDecorators": true,
    "module": "node16",
    "target": "ES2021",
    "lib": ["es2021", "dom"],
    "suppressImplicitAnyIndexErrors": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "declaration": true,
    "noImplicitThis": true,
    "strict": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "paths": {
      "@envelop/core": ["packages/core/src/index.ts"],
      "@envelop/testing": ["packages/testing/src/index.ts"],
      "@envelop/types": ["packages/types/src/index.ts"],
      "@envelop/*": ["packages/plugins/*/src/index.ts"]
    }
  },
  "include": ["packages"],
  "exclude": ["**/dist", "**/temp"]
}
