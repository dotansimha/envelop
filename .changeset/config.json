{
  "$schema": "https://unpkg.com/@changesets/config@2.1.0/schema.json",
  "changelog": ["@changesets/changelog-github", { "repo": "n1ru4l/envelop" }],
  "commit": false,
  "linked": [],
  "access": "public",
  "baseBranch": "main",
  "updateInternalDependencies": "patch",
  "ignore": [
    "@envelop-examples/*",
    "website",
    "@envelop-examples/graphql-ws",
    "@envelop-examples/graphql-sse",
    "@envelop-examples/apollo-server",
    "@envelop-examples/graphql-helix",
    "@envelop-examples/graphql-socket.io",
    "@envelop-examples/simple-http",
    "@envelop-examples/with-esm",
    "@envelop-examples/typegraphql",
    "@envelop-examples/nexus"
  ],
  "snapshot": {
    "useCalculatedVersion": true,
    "prereleaseTemplate": "{tag}-{datetime}-{commit}"
  }
}
